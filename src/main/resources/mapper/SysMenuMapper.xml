<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ruosen.star.ruosenstar.dao.SysMenuMapper">

    <select id="getSysMenuListByName" resultType="com.ruosen.star.ruosenstar.module.vo.SysMenuVo">
        select *
        from sys_menu
        where id in (
            select menu_id
            from sys_role_menu
            where role_id in (
                select role_id
                from sys_user_role
                where user_id = (
                    select id
                    from sys_user
                    where name = #{name}
                )
            )
        )
    </select>
</mapper>